<br/><br/><br/>
<div class="container">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @task.title %></span>
        <p><%= @task.description %></p>
      </div>
      <div class="card-action">
        <div class="row">
          <a href="/tasks/<%= @task.id %>/edit" class="waves-effect waves-light btn">Edit Task</a>
          <form class="col s6" action="/tasks/<%= @task.id %>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input class="waves-effect waves-light btn" type="submit" value="Delete Task">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
